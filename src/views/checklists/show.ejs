<%- include('../layouts/header', {title: checklist.name }) %>
<%- include('../layouts/menu') %>

        <section class="section">
            <div class="container">
                <div class="columns">
                    <div class="column is-four-fifths">
                        <h1 class="title size-4">
                            <%= checklist.name %>
                        </h1>
                    </div>
                    <div class="column is-one-fifth">
                        <a href="/checklists/<%=checklist.id%>/tasks/new" class="button is-success is-small">Nova
                            Tarefa</a>
                        <a href="/checklists" class="button is-small">Voltar</a>
                    </div>
                </div>

                <hr />

                <% checklist.tasks.forEach(tasks=> { %>
                    <div class="columns">
                        <div class="column is-four-fifths <%= tasks.done ? 'has-text-success is-italic' : ''%>">
                            <input type="checkbox" onchange="setTagAsDone(this,'<%= tasks.id%>')" <%= tasks.done ? 'checked' : '' %>
                            /> <%= tasks.name %>
                        </div>

                        <div class="column is-one-fifth">
                            <a href="/tasks/<%= tasks._id%>?_method=delete"
                                class="button is-danger is-small">Remover</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </section>

<%- include('../layouts/footer') %>